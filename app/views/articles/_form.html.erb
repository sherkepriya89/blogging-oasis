<div class="container">
<div class="row justify-content-center">
<div class="col-10">
<%= render 'shared/errors', obj: @article %>
<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded",local: true, data: { turbo: false }) do |f| %>
<div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
<div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded mt-3", placeholder: "Description of article" %>
          </div>
        </div>

<div class="form-group mt-3 text-center">
<%= f.submit class: "btn btn-outline-light btn-lg" %>
<% end %>
</div>
<div style="text-align:center">
<%= link_to "[ Cancel and return to articles listing ]",
articles_path, class: "text-info link-center" %>
</div>
</div>
</div>
</div>






