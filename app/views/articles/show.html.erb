<h2 class="text-center mt-4">
  <%= @article.title %>
</h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-5">
      <div class="card text-center shadow mb-4 bg-white rounded">
        <div class="card-header fst-italic">
          by
          <%= @article.user.username if @article.user %>
            <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
        </div>
        <div class="card-body">
          <div class="card-text text-start">
            <%= simple_format(@article.description) %>
          </div>
          <%if logged_in? && @article.user==current_user %>
            <%= link_to "Edit" , edit_article_path(@article), class: "btn btn-outline-info" %>
              <%= button_to "Delete" , article_path(@article), class: "btn btn-outline-danger" , method: :delete, form:
                { data: { turbo_confirm: "Are you sure?" } } %>
                <% end %>
        </div>
        <div class="card-footer text-muted">
          <small>Created
            <%= time_ago_in_words(@article.created_at) %>
              ago, edited
              <%= time_ago_in_words(@article.updated_at) %>
                ago
          </small>
        </div>
      </div>
    </div>
  </div>
</div>