<div class="container">
<div class="row justify-content-center">
<div class="col-10">
<%= render 'shared/errors', obj: @user %>
<%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded",local: true, data: { turbo: false }) do |f| %>
<div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>
<div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.email_field :email, class: "form-control shadow rounded mt-3", placeholder: "Enter you email address" %>
          </div>
        </div>

<div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded mt-3", placeholder: "Enter a password" %>
          </div>
        </div>

<div class="form-group mt-3 text-center">
<%= f.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
<% end %>
</div>
<div style="text-align:center">
<%= link_to "[ Cancel and return to articles listing ]",
articles_path, class: "text-info link-center" %>
</div>
</div>
</div>
</div>
